---
import type { HTMLAttributes } from "astro/types";

const props = Astro.props;

type Props = HTMLAttributes<"img">;
---

{
  props.title ? (
    <figure class="flex flex-col items-center gap-2">
      <img {...props} />
      <figcaption class="text-sm italic">{props.title}</figcaption>
    </figure>
  ) : (
    <img {...props} />
  )
}
