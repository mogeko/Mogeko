---
import { buttonVariants } from "@/components/ui/button";
import Link from "@/components/link.astro";
const { class: className, ...props } = Astro.props;

type Props = astroHTML.JSX.HTMLAttributes;
---

<nav
  class:list={[
    "sticky top-0 z-10 mx-auto flex w-full flex-row items-center justify-end px-6 py-4 backdrop-blur-sm",
    className,
  ]}
  {...props}
>
  <Link
    class="relative text-lg font-bold"
    variant="underline"
    href="/"
    data-astro-prefetch>Home</Link
  >
</nav>
