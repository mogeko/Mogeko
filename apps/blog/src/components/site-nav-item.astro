---
import { linkVariants } from "@/components/ui/link.astro";
import type { HTMLAttributes } from "astro/types";

const { class: className, ...props } = Astro.props;

type Props = HTMLAttributes<"a">;
---

<a
  class:list={[
    "text-lg font-bold",
    linkVariants({ variant: "underline" }),
    className,
  ]}
  data-astro-prefetch
  {...props}><slot /></a
>
