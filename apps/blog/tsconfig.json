{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"], "@/config/*": ["./config/*"] },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": ["src/**/*", "*.config.ts", "config/*.ts"],
  "exclude": ["node_modules", "dist"]
}
